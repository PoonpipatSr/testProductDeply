generator client {
  provider = "prisma-client"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Study_plan {
  id        Int     @id @default(autoincrement())
  plan_code String? @unique
  name_eng  String
  name_th   String

  student_plans Student_plan[]
}

model Student_plan {
  student_id Decimal
  plan_id    Int
  created_at DateTime
  updated_at DateTime

  study_plan Study_plan @relation(fields: [plan_id], references: [id])

  @@id([student_id, plan_id])
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model study_plan {
  id        Int     @id @default(autoincrement())
  plan_code String? @unique
  name_eng  String
  name_th   String

  student_plans student_plan[]
}

model student_plan {
  student_id Decimal
  plan_id    Int
  created_at DateTime
  updated_at DateTime

  study_plan study_plan @relation(fields: [plan_id], references: [id])

  @@id([student_id, plan_id])
}
